ellipsis()
  white-space nowrap
  overflow hidden
  text-overflow ellipsis
multiEllipsis()
  overflow hidden
  text-overflow ellipsis
  display -webkit-box
  -webkit-line-clamp 2
  -webkit-box-orient vertical
box-shadow()
  -webkit-box-shadow 0 20px 50px 0 rgba(55, 56, 56, 0.2)
  box-shadow 0 20px 50px 0 rgba(55, 56, 56, 0.2)