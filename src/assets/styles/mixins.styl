ellipsis()
  white-space nowrap
  overflow hidden
  text-overflow ellipsis
multiEllipsis()
  overflow hidden
  text-overflow ellipsis
  display -webkit-box
  -webkit-line-clamp 2
  -webkit-box-orient vertical
box-s()
  -webkit-box-shadow 0 20px 50px 0 rgba(55, 56, 56, 0.2)
  box-shadow 0 20px 50px 0 rgba(55, 56, 56, 0.2)
bg-filter()
  position absolute
  top 0
  left 0
  object-fit cover
f-filter()
  width 90%
  height 90%
  top 18%
  left 5%
  /* 高斯模糊 */
  -webkit-filter blur(10px)
  -moz-filter blur(10px)
  filter blur(10px)
  opacity 0.8
  position absolute
  object-fit cover

